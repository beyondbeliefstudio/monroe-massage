---
import { type HTMLAttributes } from "astro/types";

const tags = {
  h1: "h1",
  h2: "h2",
  h3: "h3",
  h4: "h4",
  h5: "h5",
  h6: "h6",
};

const sizes = {
  display: "fs-display",
  xxl: "fs-xxl",
  xl: "fs-xl",
  l: "fs-l",
  m: "fs-m",
  s: "fs-s",
  xs: "fs-xs",
};

const fontFamilies = {
  primary: "ff-primary",
  secondary: "ff-secondary",
};

const marginBottoms = {
  xl: "mb-xl",
  l: "mb-l",
  m: "mb-m",
  s: "mb-s",
  xs: "mb-xs",
  none: "mb-none",
};

const weights = {
  fw100: "fw-100",
  fw200: "fw-200",
  fw300: "fw-300",
  fw400: "fw-400",
  fw500: "fw-500",
  fw600: "fw-600",
  fw700: "fw-700",
  fw800: "fw-800",
  fw900: "fw-900",
};

interface Props extends HTMLAttributes<keyof typeof tags> {
  tag: keyof typeof tags;
  size: keyof typeof sizes;
  fontFamily: keyof typeof fontFamilies;
  marginBottom: keyof typeof marginBottoms;
  weight: keyof typeof weights;
}

const { tag, size, fontFamily, marginBottom, weight, ...rest } = Astro.props;
const CustomTag = tag;
---

<CustomTag
  class:list={[
    "default",
    sizes[size],
    fontFamilies[fontFamily],
    marginBottoms[marginBottom],
    weights[weight],
  ]}
  {...rest}
>
  <slot />
</CustomTag>

<style>
  .default {
    line-height: 1.1;
    text-wrap: balance;
    text-transform: initial;
  }

  /* Sizes */
  .fs-display {
